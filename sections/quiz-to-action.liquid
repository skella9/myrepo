<style>
.quiz-to-action-container {
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 20px;
  width: fit-content;
  max-width: 80%;
  min-width: 50%;
}

.quiz-to-action-container h2 {
  text-align: center;
}

.quiz-to-action-subheader {
  text-align: center;
  margin-bottom: 20px;
}

.quiz-to-action-question-container {
  background: rgba(0,0,0,0.07);
  padding: 16px;
  border-radius: 2px;
  border: 1px solid rgba(0,0,0,0.4);
}

.quiz-to-action-question-container ul {
  list-style: none;
  margin: 0px;
}

.quiz-to-action-question-text {
  color: rgba(0,0,0,0.8);
}

.quiz-to-action-answer {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.quiz-to-action-answer + .quiz-to-action-answer {
  margin-top: 12px;
}

.quiz-to-action-answer-clickable, .quiz-to-action-answer-clickable * {
  cursor: pointer;
}

.quiz-to-action-answer input[type="radio"] {
  margin-left: 3px;
  margin-right: 3px;
  margin-top: 4px;
  margin-bottom: 3px;
}

.quiz-to-action-answer-text {
  margin-left: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quiz-to-action-text-answer {
  width: 100%;
}

.quiz-to-action-button {
}

.quiz-to-action-button:disabled {
  opacity: 0.4;
}

.quiz-to-action-button-container {
  margin-top: 8px;
  text-align: right;
}

.quiz-to-action-score-statement {
  font-size: 120%;
}

.quiz-to-action-score {
  font-weight: 600;
}

.quiz-to-action-call-to-action-container {
  display: flex;
  align-items: center;
  justify-content: left;
}

.quiz-to-action-container input.quiz-to-action-subscribe-email {
  margin: 0px;
}

.quiz-to-action-result-container {
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
}

.quiz-to-action-result-product {
  display: flex;
  margin: 4px;
  cursor: pointer;
}

.quiz-to-action-result-product-image {
  display: flex;
  align-items: center;
  max-width: 100px;
  max-height: 100px;
}

.quiz-to-action-result-product-title {
  flex: 1;
  display: flex;
  align-items: center;
  margin-right: 8px;
  margin-top: 8px;
  margin-bottom: 8px;
  margin-left: 8px;
}

.quiz-to-action-result-product-type-link .quiz-to-action-result-product-title {
  justify-content: center;
}


@keyframes delayed-show {
  to {
    visibility: visible;
  }
}

.delayed-show{
  visibility: hidden;
  animation: 0s linear 0.3s forwards delayed-show ;
}

/* modern */

@keyframes fade-in {
  0% {opacity:0;}
  100% {opacity:1;}
}

.fade-in {
}

.quiz-to-action-container__modern.quiz-to-action-container {
  text-align: center;
}

.quiz-to-action-container__modern .quiz-to-action-question-container {
  background: transparent;
  padding: 16px;
  border-radius: 2px;
  border: none;
  animation: fade-in linear 0.25s;
}

.quiz-to-action-container__modern .quiz-to-action-question-container ul {
  padding-left: 0px;
  padding-right: 0px;
}

.quiz-to-action-container__modern .quiz-to-action-question-text {
  color: inherit;
}

.quiz-to-action-container__modern .quiz-to-action-answer {
  animation: fade-in linear 0.25s;
  display: block;
  border: 2px transparent;
  border-radius: 16px;
  min-width: 200px;
  width: fit-content;
  padding-top: 12px;
  padding-bottom: 12px;
  padding-left: 40px;
  padding-right: 40px;
  margin-left: auto;
  margin-right: auto;
}

.quiz-to-action-container__modern .quiz-to-action-answer.quiz-to-action-answer-clickable {
  border: 2px solid;
  cursor: pointer;
  position: relative;
}

.quiz-to-action-container__modern .quiz-to-action-answer.quiz-to-action-answer-clickable:hover {
  filter: brightness(1.25);
}

.quiz-to-action-container__modern .quiz-to-action-answer.quiz-to-action-answer-clickable:hover:before {
  position: absolute;
  content: '';
  display: block;
  border-radius: 16px;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.8;
  box-shadow: 0px 0px 6px 1px;
}

.quiz-to-action-container__modern .quiz-to-action-answer.quiz-to-action-answer-clickable:focus-visible {
  border-radius: 16px;
}

.quiz-to-action-container__modern .quiz-to-action-answer input[type="radio"] {
  display: none;
}

.quiz-to-action-container__modern .quiz-to-action-answer.quiz-to-action-answer-selected {
  border: 2px solid rgba(0,0,0,0.20);
}

.quiz-to-action-container__modern .quiz-to-action-answer.quiz-to-action-revealing-answer:hover {
}

.quiz-to-action-container__modern .quiz-to-action-text-answer {
  width: 60%;
}

.quiz-to-action-container__modern .quiz-to-action-answer + .quiz-to-action-answer {
  margin-top: 20px;
}

.quiz-to-action-container__modern .quiz-to-action-answer-text {
  margin-left: 0px;
}

.quiz-to-action-container__modern .quiz-to-action-button-container {
  margin-top: 20px;
  text-align: center;
}

.quiz-to-action-container__modern .quiz-to-action-call-to-action-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
}

.quiz-to-action-container__modern .quiz-to-action-container input.quiz-to-action-subscribe-email {
  margin: 0px;
  min-width: 300px;
}

.quiz-to-action-container__modern .quiz-to-action-call-to-action-container .button {
  margin-top: 16px;
}

@media (max-width: 440px) {
  .quiz-to-action-container.quiz-to-action-container__modern {
    max-width: initial;
  }
}
</style>

<script src="https://app.quiztoaction.com/ext/section-Ohw3haht.js"></script>
<script>
  function loadQuizToAction() {
    const quizToActionUrl = "https://app.quiztoaction.com";
    const shopApiKey = "{{shop.metafields.quiztoaction.public_api_shop_id}}";
    const sectionId = "{{publishSpotId}}";
    const publishSpotName = "{{section.settings.publishSpotName}}";
    const designMode = "{{section.design_mode}}";
    quizToActionRender(quizToActionUrl, shopApiKey, sectionId, publishSpotName, designMode);
  }

  document.addEventListener('DOMContentLoaded', loadQuizToAction);

  document.addEventListener("shopify:section:load", function(event) {
    if(event.detail.sectionId === '{{section.id}}') {
      loadQuizToAction();
    }
  });
</script>

